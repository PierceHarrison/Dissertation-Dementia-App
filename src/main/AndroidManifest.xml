<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dissertation_dementia_app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:required="true" />
    <uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DissertationDementiaApp">
        <activity android:name=".AudioActivity"/>
        <activity android:name=".MediaActivity" />
        <activity android:name=".ScheduleActivity" />
        <activity android:name=".FaceReminder" />
        <activity android:name=".FaceAdd"/>
        <activity android:name=".SosSettings"/>
        <activity android:name=".ClockActivity"/>
        <activity android:name=".SettingsMenu" />
        <activity android:name=".MainMenu" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>